<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:background="@color/dark_grey">

        <ImageView
            android:id="@+id/event_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/pic_bannerview" />

        <TextView
            android:id="@+id/event_title"
            android:layout_width="117dp"
            android:layout_height="22dp"
            android:layout_toEndOf="@id/event_image"
            android:text="Event Title"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/event_date_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/event_title"
            android:layout_toEndOf="@id/event_image"
            android:text="Day"
            android:textColor="@color/grey" />

        <TextView
            android:id="@+id/event_date_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/event_title"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@id/event_date_day"
            android:text="Month"
            android:textColor="@color/grey" />

        <TextView
            android:id="@+id/event_date_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/event_title"
            android:layout_marginStart="4dp"
            android:layout_toEndOf="@id/event_date_month"
            android:text="Year"
            android:textColor="@color/grey" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>