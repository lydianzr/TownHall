<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="#2E2E2E">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#3D3D3D"
            android:padding="8dp">

            <TextView
                android:id="@+id/ticketIdTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ticket ID: "
                android:textColor="#0D47A1"
                android:textSize="18sp"
                android:fontFamily="sans-serif-medium"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/statusTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status: "
                android:textSize="14sp"
                android:textColor="#4CAF50"
                android:fontFamily="sans-serif-medium"
                android:background="@drawable/status_background"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"/>
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#4DFFFFFF"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

        <!-- Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- ImageView -->

            <TextView
                android:id="@+id/ticketCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category: "
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/ticketDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date Submitted: "
                android:textSize="14sp"
                android:textColor="#BDBDBD"
                android:fontFamily="sans-serif"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/ticketTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time: "
                android:textSize="14sp"
                android:textColor="#BDBDBD"
                android:fontFamily="sans-serif"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/ticketReceiver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Receiver: "
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="8dp" />
            <TextView
                android:id="@+id/ticketDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description: "
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="4dp"
                android:layout_marginTop="8dp"
                android:background="#3D3D3D"
                android:padding="8dp"/>

            <TextView
                android:id="@+id/ticketLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:drawablePadding="10dp"
                android:fontFamily="sans-serif"
                android:text=""
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>