<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TownHall" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/teal</item>
        <item name="colorPrimaryVariant">@color/dark_grey</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary Colors -->
        <item name="colorSecondary">@color/light_grey</item>
        <item name="colorSecondaryVariant">@color/dark_grey</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Text Colors -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/light_grey</item>
        <item name= "android:textColorTertiary">@color/dark_grey</item>

        <!-- Status Bar and Navigation Bar Colors -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>


        <!-- Background Color -->
        <item name="android:windowBackground">@color/black</item>

        <!-- Accent Colors for Highlights or Buttons -->
        <item name="colorAccent">@color/teal</item>

    </style>

    <!-- Custom DatePicker Theme -->
    <style name="CustomDatePickerTheme" parent="Theme.MaterialComponents.DayNight.Dialog">
        <!-- Set dark grey background -->
        <item name="android:windowBackground">@color/light_grey</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="CalendarDateText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CalendarHeaderText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/teal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomWeekdayTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/teal</item> <!-- Change to your desired color -->
        <item name="android:textSize">14sp</item> <!-- Optional: Customize the text size -->
        <item name="android:textStyle">bold</item> <!-- Optional: Customize text style -->
    </style>

    <style name="CustomDateTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>  <!-- Set text color to white -->
    </style>

</resources>